<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White border layer -->
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners with a radius of 20dp -->
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for border -->
            <stroke android:width="2dp" android:color="@color/white" /> <!-- Set the border color to white -->
        </shape>
    </item>
    <!-- Black background layer -->
    <item android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners with a radius of 20dp -->
            <solid android:color="@color/white" /> <!-- Set the background color to black -->
        </shape>
    </item>
</layer-list>